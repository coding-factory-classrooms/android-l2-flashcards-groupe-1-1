<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/learnCheeseButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Apprendre le fromage"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.632"
            tools:text="Apprendre le fromage" />

        <Button
            android:id="@+id/questionsListButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Liste des questions"
            app:layout_constraintEnd_toEndOf="@+id/learnCheeseButton"
            app:layout_constraintStart_toStartOf="@+id/learnCheeseButton"
            app:layout_constraintTop_toBottomOf="@+id/learnCheeseButton"
            tools:text="Liste des questions" />

        <Button
            android:id="@+id/aboutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Ã€ propos"
            app:layout_constraintEnd_toEndOf="@+id/questionsListButton"
            app:layout_constraintStart_toStartOf="@+id/questionsListButton"
            app:layout_constraintTop_toBottomOf="@+id/questionsListButton"
            tools:text="A propos" />

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="275dp"
            android:layout_height="321dp"
            app:layout_constraintBottom_toTopOf="@+id/learnCheeseButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo2" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>